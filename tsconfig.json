{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./extension",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "sourceMap": false,
        "resolveJsonModule": true,
        "lib": ["ESNext", "DOM"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/declare/globals.d.ts"],
    "exclude": ["node_modules"]
}